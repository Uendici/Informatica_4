#include <stdio.h>

int main() {
    int N;
    // Chiedi all'utente quanti numeri inserir√†
    printf("Quanti numeri vuoi inserire? ");
    scanf("%d", &N);

    // Dichiarare un vettore per memorizzare i numeri inseriti
    int vetA[N];

    // Inserimento dei numeri nel vettore
    for(int i = 0; i < N; i++) {
        printf("Inserisci il numero %d: ", i + 1);
        scanf("%d", &vetA[i]);
    }

    // Visualizzazione delle righe di asterischi con indicazione dell'indice
    for(int i = 0; i < N; i++) {
        printf("vetA[%d]: ", i + 1);
        for(int j = 0; j < vetA[i]; j++) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
